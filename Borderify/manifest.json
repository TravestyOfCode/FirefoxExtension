{
  "manifest_version": 2,
  "name": "Bordify",
  "version": "1.0",
  "description": "Adds red borders to all webpages matching mozilla.org",
  "icons": {
    "48": "icons/border-48.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://*.mozilla.org/*" ],
      "js": ["borderify.js"]
    }
  ]
}
